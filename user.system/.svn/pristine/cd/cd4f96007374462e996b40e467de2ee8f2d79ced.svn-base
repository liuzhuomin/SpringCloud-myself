package xinrui.cloud.service;

import xinrui.cloud.dto.UserDto;
import org.springframework.cloud.client.loadbalancer.LoadBalanced;
import org.springframework.cloud.netflix.feign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import xinrui.cloud.fallback.UserServiceFallBack;

@FeignClient(value = "authorization", path = "user", fallback = UserServiceFallBack.class)
public interface UserServiceFeign {

    @LoadBalanced
    @GetMapping("find/{username}")
    public UserDto findUserByUserName(@PathVariable("username") String username);

    @LoadBalanced
    @GetMapping("find/by/{id}")
    public UserDto findUserByUserId(@PathVariable("id") Long id);
}
