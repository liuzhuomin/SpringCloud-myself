package xinrui.cloud.domain.dto;

import com.google.common.collect.Lists;
import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.Getter;
import lombok.Setter;
import org.springframework.beans.BeanUtils;
import org.springframework.util.CollectionUtils;
import xinrui.cloud.common.utils.BeanUtilsEchance;
import xinrui.cloud.domain.TechnologyFinancial;

import java.util.List;

/**
 * @author liuliuliu
 * @version 1.0
 * @date 2019/8/9 17:40
 */
@ApiModel("科技金融产品审核列表对象")
@Getter
@Setter
public class TechnologyFinancialBaseInfoDto {
    @ApiModelProperty(value = "图片展示地址", position = 1)
    private String imageUrl;
    @ApiModelProperty(value = "产品名称", position = 2)
    private String name;
    @ApiModelProperty(value = "产品标语", position = 3)
    private String slogan;
    @ApiModelProperty(value = "产品详细信息", position = 4)
    private String information;
    @ApiModelProperty(value = "申请结束时间", position = 5)
    private String applyEndDate;
    @ApiModelProperty(value = "最高贷款金额", position = 6)
    private String loanAmount;
    @ApiModelProperty(value = "总共预约人数", position = 7)
    private String appointmentCount;
    @ApiModelProperty(value = "贷款期限", position = 8)
    private String loanTimeLimit;
    @ApiModelProperty(value = "可抵押物件", position = 9)
    private String technologyLoanTypes;

    private TechnologyFinancialBaseInfoDto copy(TechnologyFinancial technologyFinancial) {
        TechnologyFinancialBaseInfoDto dto = new TechnologyFinancialBaseInfoDto();
        BeanUtils.copyProperties(technologyFinancial, dto, "applyEndDate", "loanAmount", "loanTimeLimit", "technologyLoanTypes");
        return dto;
    }

    private List<TechnologyFinancialBaseInfoDto> copy(List<TechnologyFinancial> technologyFinancials) {
        List<TechnologyFinancialBaseInfoDto> result = Lists.newArrayList();
        if (CollectionUtils.isEmpty(technologyFinancials)) {
            BeanUtilsEchance.CopyListFilter<TechnologyFinancialBaseInfoDto> copyListFilter = new BeanUtilsEchance.CopyListFilter<TechnologyFinancialBaseInfoDto>() {
                @Override
                public void copy(Object source, TechnologyFinancialBaseInfoDto target) {
                    copy(source, target);
                }
            };
            return BeanUtilsEchance.copyList(technologyFinancials, TechnologyFinancialBaseInfoDto.class, copyListFilter);
        }
        return result;
    }
}
