package liuzhuomin.cloud;

import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.builder.SpringApplicationBuilder;
import org.springframework.cloud.netflix.hystrix.dashboard.EnableHystrixDashboard;
import org.springframework.cloud.netflix.zuul.EnableZuulProxy;

/**
 * zull api 网关代理
 *
 * @author liuliuliu
 */
@SpringBootApplication
@EnableZuulProxy                //开启zuul网关，标识这是一个网关程序
@EnableHystrixDashboard        //是否开启hystrix仪表盘监控
//@EnableOAuth2Sso                //标识是单点登录中心，会触发zuul的filter并且把token向下游传递，在header中
public class ApplicationZuul {

    public static void main(String[] args) {

        new SpringApplicationBuilder(ApplicationZuul.class).web(true).run(args);

    }




}
