package liuzhuomin.cloud.config;

import feign.RequestInterceptor;
import feign.RequestTemplate;
import liuzhuomin.cloud.compoment.UserContext;
import org.apache.commons.lang.StringUtils;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Configuration;

/**
 * <B>Title:</B>FeignConfig</br>
 * <B>Description:</B>拦截feign发起的请求，将token放在消息头转递给下游</br>
 * <B>Copyright: </B>Copyright (c) 2019 </br>
 *
 * @author liuliuliu
 * @version 1.0
 * @date2019/7/5 13:38
 */
@Configuration
public class FeignConfig implements RequestInterceptor {

    private Logger LOGGER = LoggerFactory.getLogger(FeignConfig.class);

    @Autowired
    UserContext userContext;

    @Override
    public void apply(RequestTemplate template) {
        LOGGER.info("携带token是否为空?{}", StringUtils.isEmpty(userContext.getToken()));
        template.header("access_token", userContext.getToken());
    }
}
