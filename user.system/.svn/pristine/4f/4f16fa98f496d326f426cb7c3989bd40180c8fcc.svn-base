    OrganizationService organizationService;

    @GetMapping("find/{name}")
    public OtherGroupDto findUserByUserName(@PathVariable("name") String name){
        LOGGER.info("当前查询的组织{}",name);
        return organizationService.findByCompanyName(name);
    }

